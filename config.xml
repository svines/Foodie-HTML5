<?xml version='1.0' encoding='utf-8'?>
<widget id="com.foodiesys.foodiemobileapp" versionCode = "8" version="1.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0" >

    <name>Fudi</name>
    <description>Authentic and Specialized Cuisine by Local Chefs</description>
    <author href="http://www.FoodieSys.com" email="alex@foodiesys.com">Alex Gray</author>
    
    <preference name="permissions" value="none"/>

	<access origin="*" />
	<allow-intent href="*" />
	<allow-navigation href="http://*/*" />
	<allow-navigation href="https://*/*" />
	<allow-navigation href="http://mobileapi.foodiesys.com/*" />
	<allow-navigation href="data:*" />
	
	<preference name="android-minSdkVersion" value="15" /> 
	<preference name="android-build-tool" value="gradle" />
	
	<plugin name="cordova-plugin-facebook4" source="npm">
        <param name="APP_ID" value="1429053297422142" />
        <param name="APP_NAME" value="Foodie" />
    </plugin>
	
	<gap:plugin name="cordova-plugin-geolocation"  source="npm" />
	<gap:plugin name="com.paypal.cordova.mobilesdk" source="npm" />
	<plugin name="cordova-plugin-whitelist" spec="1" />
	<plugin name="cordova-plugin-camera" spec="1.2.0" source="pgb" />
	<plugin name="cordova-plugin-media-capture" spec="1.0.1" source="pgb" />
	<plugin name="cordova-plugin-file" spec="3.0.0" source="pgb" />
	<plugin name="cordova-plugin-file-transfer" spec="1.3.0" source="pgb" />
	<plugin name="cordova-plugin-console" spec="1.0.1" source="pgb" />
	
	<!--<plugin name="phonegap-plugin-push" source="npm">
		<param name="SENDER_ID" value="1429053297422142" />
	</plugin>-->
	
	
	
	<gap:plugin name="phonegap-plugin-barcodescanner" source="npm" />
	
	
	<icon src="icon.png" />
	
	<platform name="ios">
		<icon src="foodie-logo_57x57.png" width="57" height="57" />
		<icon src="foodie-logo_72x72.png" width="72" height="72" />
		<icon src="foodie-logo_76x76.png" width="76" height="76" />
		<icon src="foodie-logo_120x120.png" width="120" height="120" />
		<icon src="foodie-logo_152x152.png" width="152" height="152" />
		<icon src="foodie-logo_512x512.png" width="512" height="512" />
		<icon src="foodie-logo_1024x1024.png" width="1024" height="1024" />        
	</platform>
	
	<platform name="android" />
	<platform name="winphone" />
	
</widget>
