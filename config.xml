<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ewebcraft.foodie" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" >

    <name>Foodie</name>
    <description>Foodie App</description>
    <author href="http://ewebcraft.com" email="atifrashid@hotmail.com">Atif Rashid</author>

	<access origin="*" />
	<allow-intent href="*" />
	<allow-navigation href="http://*/*" />
	<allow-navigation href="https://*/*" />
	<allow-navigation href="http://mobileapi.foodiesys.com/*" />
	<allow-navigation href="data:*" />
	
	<plugin name="cordova-plugin-geolocation" spec="1.0.1" source="pgb" />
	<plugin name="com.paypal.cordova.mobilesdk" spec="3.1.2" source="pgb" />	
	<plugin name="cordova-plugin-whitelist" spec="1"/>
	
	<plugin name="cordova-plugin-camera" spec="1.2.0" source="pgb" />
	<plugin name="cordova-plugin-media-capture" spec="1.0.1" source="pgb" />
	<plugin name="cordova-plugin-file" spec="3.0.0" source="pgb" />
	<plugin name="cordova-plugin-file-transfer" spec="1.3.0" source="pgb" />
	<plugin name="cordova-plugin-console" spec="1.0.1" source="pgb" />
	<plugin name="cordova-plugin-barcode-scanner2" source="npm" />
	
	<!--<plugin name="org.madmobile.cordovaplugins.zbarscanner" source="npm" />-->
	
	
	<icon src="icon.png"/>
	
</widget>

